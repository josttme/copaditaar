---
// src/components/ErrorMessage.astro
interface Props {
	message?: string
}

const { message = 'Ha ocurrido un error al cargar los productos' } = Astro.props
---

<div
	class="mx-auto my-12 max-w-lg rounded-lg bg-red-900 p-6 text-center text-white"
>
	<h2 class="mb-2 text-xl font-bold">Error</h2>
	<p>{message}</p>
	<button
		class="mt-4 rounded-lg bg-white px-4 py-2 text-red-900 transition-colors hover:bg-gray-200"
		onclick="window.location.reload()"
	>
		Reintentar
	</button>
</div>
